          {
            "name":"beginTime",
            "type": "string",
            "title": {
              "en":"starttime",
              "nl":"starttijd"
            },
            "example": "08:30"
          },
          {
            "name":"endHour",
            "type": "number",
            "title": {
              "en":"last hr",
              "nl":"laatste uur"
            },
            "example": 7
          },
          {
            "name":"endTime",
            "type": "string",
            "title": {
              "en":"endtime",
              "nl":"eindtijd"
            },
            "example": "15:00"
          },
          {
            "name":"scrappedLessons",
            "type": "boolean",
            "title": {
              "en":"scrapped",
              "nl":"uitval"
            },
            "example": false
          }
        ]
      }
    ],
