            "placeholder": {
              "en": "Which student",
              "nl": "Welke scholier"
             }
          }
        ],
        "tokens":[
          {
            "name":"name",
            "type": "string",
            "title": {
              "en":"name",
              "nl":"naam"
            },
            "example": "Jason"
          },
          {
            "name":"beginHour",
            "type": "number",
            "title": {
              "en":"1st hr",
              "nl":"1e uur"
