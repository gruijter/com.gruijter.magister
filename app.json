  "contributing": {
    "donate": {
      "paypal": {
        "username": "gruijter"
      }
    }
  },
	"bugs": {
		"url": "https://github.com/gruijter/com.gruijter.magister/issues"
	},
	"homeyCommunityTopicId": 595,
  "images": {
    "large": "./assets/images/large.jpg",
    "small": "./assets/images/small.jpg"
  },
  "category": ["internet", "tools"],
  "permissions": [
    "homey:manager:speech-output"
  ],
	"capabilities": {
		"schoolStart": {
				"type": "string",
				"title": {
						"en": "start",
						"nl": "start"
				},
				"getable": true,
				"setable": false,
				"preventInsights": true,
        "icon": "./drivers/student/assets/schoolStart.svg"
		},
		"schoolEnd": {
				"type": "string",
				"title": {
						"en": "end",
						"nl": "einde"
				},
				"getable": true,
				"setable": false,
				"preventInsights": true,
        "icon": "./drivers/student/assets/schoolEnd.svg"
		},
		"lastGrade": {
				"type": "string",
				"title": {
						"en": "Last",
						"nl": "Laatste"
				},
				"getable": true,
				"setable": false,
				"preventInsights": true,
        "icon": "./drivers/student/assets/lastGrade.svg"
		},
		"totalAverageGrade": {
				"type": "number",
				"title": {
						"en": "Average",
						"nl": "Gemiddeld"
				},
				"getable": true,
				"setable": false,
				"preventInsights": true,
        "icon": "./drivers/student/assets/totalAverageGrade.svg"
		}
	},

	"drivers": [
		{
			"id": "student",
			"name": {
				"en": "Student",
				"nl": "Leerling"
			},
			"images": {
			 "large": "drivers/student/assets/images/large.jpg",
			 "small": "drivers/student/assets/images/small.jpg"
			},
			"class": "other",
			"capabilities": [ "schoolStart", "schoolEnd", "lastGrade", "totalAverageGrade" ],
			"capabilitiesOptions": {
				"schoolStart": {
					"preventInsights": true
				},
				"schoolEnd": {
					"preventInsights": true
				},
				"lastGrade": {
					"preventInsights": true
				},
				"totalAverageGrade": {
					"preventInsights": true
				}
			},
			"mobile": {
				"components": [
					{
						"id": "icon",
						"capabilities": [ ]
					},
					{
						"id": "sensor",
						"capabilities": [ "schoolStart", "schoolEnd", "lastGrade", "totalAverageGrade" ],
						"options": {
							"icons": {
								"schoolStart": "./drivers/student/assets/schoolStart.svg",
								"schoolEnd": "./drivers/student/assets/schoolEnd.svg",
								"lastGrade": "./drivers/student/assets/lastGrade.svg",
								"totalAverageGrade": "./drivers/student/assets/totalAverageGrade.svg"
							}
						}
					}
				]
			},
			"pair": [
				{
					"id": "start"
				}
			],
			"settings": [
				{
					"type": "group",
					"label": {
						"en": "Student settings",
						"nl": "Leerling instellingen"
					},
					"children": [
						{
							"id": "schoolName",
							"type": "label",
							"label": {
								"en": "School",
								"nl": "School"
							},
							"value": ""
						},
						{
							"id": "username",
							"type": "text",
							"label": {
								"en": "Username",
								"nl": "Gebruikersnaam"
							},
							"value": ""
						},
						{
							"id": "password",
							"type": "password",
							"label": {
								"en": "Password",
								"nl": "Wachtwoord"
							},
							"value": "password"
						},
						{
							"id": "childNumber",
							"type": "number",
							"label": {
								"en": "Parent login #",
								"nl": "Ouder login #"
							},
							"attr": { "min": 1, "max": 9 },
							"value": 1
						}
					]
				},
				{
					"type": "group",
					"label": {
						"en": "Student information",
						"nl": "Leerling informatie"
					},
					"children": [
						{
							"id": "period",
							"type": "label",
							"label": {
								"en": "School period",
								"nl": "Schooljaar"
							},
							"value": ""
						},
						{
							"id": "typeAndGroup",
							"type": "label",
							"label": {
								"en": "Schooltype and group",
								"nl": "Schooltype en klas"
							},
							"value": ""
						},
						{
							"id": "totalAverageGrade",
							"type": "label",
							"label": {
								"en": "Total grade average",
								"nl": "Cijfergemiddelde"
							},
							"value": ""
						}
					]
				},
				{
					"type": "group",
					"label": {
						"en": "Options",
						"nl": "Opties"
					},
					"children": [
						{
							"id": "fetchAllGrades",
							"type": "checkbox",
							"label": {
								"en": "Refetch all grades",
								"nl": "Alle cijfers opnieuw ophalen"
							},
							"value": false
						}
					]
				}
			]
		}
	],

  "flow":	{
    "triggers":[
      {
        "id":"new_grade",
        "title": {
          "en":"There is a new grade",
          "nl":"Er is een nieuw cijfer"
        },
        "args": [
          {
            "name": "student",
            "type": "device",
						"filter": "driver_id=student",
            "placeholder": {
              "en": "Which student",
              "nl": "Welke scholier"
             }
          }
        ],
        "tokens":[
          {
          "name":"name",
          "type": "string",
          "title": {
            "en":"name",
            "nl":"naam"
            },
          "example": "Jason"
          },
          {
