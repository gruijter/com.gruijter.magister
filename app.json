          {
            "name": "student",
            "type": "autocomplete",
            "placeholder": {
              "en": "Which student",
              "nl": "Welke scholier"
             }
          }
        ],
        "tokens":[
          {
            "name":"name",
            "type": "string",
            "title": {
              "en":"name",
              "nl":"naam"
            },
            "example": "Jason"
          },
          {
            "name":"beginHour",
            "type": "number",
            "title": {
              "en":"1st hr",
              "nl":"1e uur"
            },
            "example": 1
          },
          {
            "name":"beginTime",
            "type": "string",
            "title": {
              "en":"starttime",
              "nl":"starttijd"
            },
            "example": "08:30"
          },
          {
            "name":"endHour",
            "type": "number",
            "title": {
              "en":"last hr",
              "nl":"laatste uur"
            },
            "example": 7
          },
          {
            "name":"endTime",
            "type": "string",
            "title": {
              "en":"endtime",
              "nl":"eindtijd"
            },
            "example": "15:00"
          },
          {
            "name":"scrappedLessons",
            "type": "boolean",
            "title": {
              "en":"scrapped",
              "nl":"uitval"
            },
            "example": false
          }
        ]
      },
      {
        "id":"roster_changed_tomorrow",
        "title": {
          "en":"Tomorrows roster has changed",
          "nl":"Rooster morgen is gewijzigd"
        },
        "args": [
          {
            "name": "student",
