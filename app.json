            "type": "autocomplete",
            "placeholder": {
              "en": "Which student",
              "nl": "Welke scholier"
             }
          },
          {
            "name": "when",
            "type": "dropdown",
            "values": [
              {
                "id": "today",
                "label": {
                  "en": "today",
                  "nl": "vandaag"
                }
              },
              {
                "id": "tomorrow",
                "label": {
