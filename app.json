{
  "id": "com.gruijter.magisterv3",
  "name": {
      "en": "MagisterV3",
      "nl": "MagisterV3"
  },
  "description": {
    "en": "school information from Magister",
    "nl": "School informatie van Magister"
  },
  "version": "3.0.0",
	"sdk": 2,
  "compatibility": ">= 1.5",
  "author": {
      "name": "Robin de Gruijter",
      "email": "gruijter@hotmail.com"
  },
  "copyright": "Robin de Gruijter (gruijter@hotmail.com)",
  "license": " GPL-3.0-or-later",
  "contributing": {
    "donate": {
      "paypal": {
        "username": "gruijter"
      }
    }
  },
  "images": {
    "large": "./assets/images/large.jpg",
    "small": "./assets/images/small.jpg"
  },
  "category": ["internet", "tools"],

  "flow":	{
    "triggers":[
      {
        "id":"new_grade",
        "title": {
          "en":"There is a new grade for:",
          "nl":"Er is een nieuw cijfer voor:"
        },
        "args": [
          {
            "name": "student",
            "type": "autocomplete",
            "placeholder": {
              "en": "Which student",
              "nl": "Welke scholier"
             }
          }
        ],
        "tokens":[
          {
          "name":"name",
          "type": "string",
          "title": {
            "en":"name",
            "nl":"naam"
            },
          "example": "Jason"
          },
          {
          "name":"class",
          "type": "string",
          "title": {
            "en":"class",
            "nl":"vak"
            },
          "example": "English"
          },
          {
          "name":"description",
          "type": "string",
          "title": {
            "en":"description",
            "nl":"omschrijving"
            },
          "example": "grammar"
          },
          {
          "name":"weight",
          "type": "number",
          "title": {
            "en":"weight",
            "nl":"gewicht"
            },
          "example": 1
          },
          {
          "name":"grade",
          "type": "string",
          "title": {
            "en":"grade",
            "nl":"cijfer"
            },
          "example": "7.2"
          }
        ]
      },
      {
        "id":"roster_changed_today",
        "title": {
          "en":"Todays roster has changed",
          "nl":"Rooster vandaag is gewijzigd"
        },
        "args": [
          {
            "name": "student",
            "type": "autocomplete",
            "placeholder": {
              "en": "Which student",
              "nl": "Welke scholier"
             }
          }
        ],
        "tokens":[
          {
            "name":"name",
            "type": "string",
            "title": {
              "en":"name",
              "nl":"naam"
            },
            "example": "Jason"
          },
          {
            "name":"beginHour",
            "type": "number",
            "title": {
              "en":"1st hr",
              "nl":"1e uur"
            },
            "example": 1
          },
          {
            "name":"beginTime",
            "type": "string",
            "title": {
              "en":"starttime",
              "nl":"starttijd"
            },
            "example": "08:30"
          },
          {
            "name":"endHour",
            "type": "number",
            "title": {
              "en":"last hr",
              "nl":"laatste uur"
            },
            "example": 7
          },
          {
            "name":"endTime",
            "type": "string",
            "title": {
              "en":"endtime",
              "nl":"eindtijd"
            },
            "example": "15:00"
          },
          {
            "name":"scrappedLessons",
            "type": "boolean",
            "title": {
              "en":"scrapped",
              "nl":"uitval"
            },
            "example": false
          }
        ]
      },
      {
        "id":"roster_changed_tomorrow",
        "title": {
          "en":"Tomorrows roster has changed",
          "nl":"Rooster morgen is gewijzigd"
        },
        "args": [
          {
            "name": "student",
            "type": "autocomplete",
            "placeholder": {
              "en": "Which student",
              "nl": "Welke scholier"
             }
          }
        ],
        "tokens":[
          {
            "name":"name",
            "type": "string",
            "title": {
              "en":"name",
              "nl":"naam"
            },
            "example": "Jason"
          },
          {
            "name":"beginHour",
            "type": "number",
            "title": {
              "en":"1st hr",
              "nl":"1e uur"
            },
            "example": 1
          },
          {
            "name":"beginTime",
            "type": "string",
            "title": {
              "en":"starttime",
              "nl":"starttijd"
            },
            "example": "08:30"
          },
          {
            "name":"endHour",
            "type": "number",
            "title": {
              "en":"last hr",
              "nl":"laatste uur"
            },
            "example": 7
          },
          {
            "name":"endTime",
            "type": "string",
            "title": {
              "en":"endtime",
              "nl":"eindtijd"
            },
            "example": "15:00"
          },
          {
            "name":"scrappedLessons",
            "type": "boolean",
            "title": {
              "en":"scrapped",
              "nl":"uitval"
            },
            "example": false
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "scrapped",
        "title": {
          "en": "A lesson !{{is|isn't}} scrapped",
          "nl": "Een les is !{{|niet}} uitgevallen"
        },
        "args": [
          {
            "name": "student",
            "type": "autocomplete",
            "placeholder": {
              "en": "Which student",
              "nl": "Welke scholier"
             }
          },
          {
            "name": "when",
            "type": "dropdown",
            "values": [
              {
                "id": "Today",
                "label": {
                  "en": "today",
                  "nl": "vandaag"
                }
              },
              {
                "id": "Tomorrow",
                "label": {
                  "en": "tomorrow",
                  "nl": "morgen"
                }
              }
            ]
          }
        ]
      },
      {
        "id": "testPlanned",
        "title": {
